{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Jekyll Site",
      "type": "shell",
      "command": "/opt/homebrew/opt/ruby/bin/bundle",
      "args": ["exec", "jekyll", "serve"],
      "options": {
        "env": {
          "PATH": "/opt/homebrew/opt/ruby/bin:/opt/homebrew/bin:${env:PATH}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}